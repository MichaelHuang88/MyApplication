<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RadioGroup
        android:id="@+id/rg_tab"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:background="@color/white">

        <RadioButton
            android:id="@+id/rd_bt_message"
            style="@style/message_tab"
            android:drawableTop="@drawable/message_selector"
            android:text="消息" />

        <RadioButton
            android:id="@+id/rd_bt_addressbook"
            style="@style/message_tab"
            android:drawableTop="@drawable/addressbook_selector"
            android:text="通讯录" />

        <RadioButton
            android:id="@+id/rd_bt_application"
            style="@style/message_tab"
            android:drawableTop="@drawable/application_selector"
            android:text="应用" />

        <RadioButton
            android:id="@+id/rd_bt_myInfo"
            style="@style/message_tab"
            android:drawableTop="@drawable/myinfo_selector"
            android:text="我的" />
    </RadioGroup>
</LinearLayout>
